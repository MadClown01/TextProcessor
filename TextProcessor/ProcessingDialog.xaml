<Window x:Class="TextProcessor.Views.ProcessingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing..." Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock x:Name="StatusText" Text="Processing file..." Margin="5"
                   HorizontalAlignment="Center"/>
        <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="20"/>
        <Button Content="Cancel" Width="80" Height="25" Margin="0,10,0,0" 
                HorizontalAlignment="Center" Click="Cancel_Click"/>
    </StackPanel>
</Window>
