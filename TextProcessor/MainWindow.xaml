<Window x:Class="TextProcessorViews.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Text Processor" Height="400" Width="600">
	
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBox x:Name="InputTextBox" Grid.Row="0" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
			<Button Content="Process" Click="Process_Click" Margin="5"/>
			<Button Content="Clear" Click="Clear_Click" Margin="5"/>
		</StackPanel>

		<TextBox x:Name="OutputTextBox" Grid.Row="2" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
	</Grid>
</Window>